CALENDAR MONTHLY
  DESCRIPTION "Standard monthly calendar"
END

RUNCYCLE MONTH_END
  DESCRIPTION "Last day of month"
  RULE LASTDAY
END

JOB MONTHEND
  DESCRIPTION "End of Month batch job"
  TASKTYPE JCL
  JCLLIB 'PROD.JCLLIB'
  JCLNAME MONTHEND
END

SCHEDULE MONTHEND
  DESCRIPTION "End of Month processing"
  ON RUNCYCLE MONTH_END RCAL MONTHLY
  AT 2300
:
  MONTHEND
END